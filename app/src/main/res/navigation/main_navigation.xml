<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sb.myevents.ui.main.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/login_fragment">
        <action
            android:id="@+id/action_loginFragment_to_userFragment"
            app:destination="@id/userFragment" />
        <action
            android:id="@+id/action_loginFragment_to_authenticated_navigation"
            app:destination="@id/authenticated_navigation" />
    </fragment>

    <fragment
        android:id="@+id/userFragment"
        android:name="com.sb.myevents.ui.main.login.UserFragment"
        android:label="UserFragment"
        tools:layout="@layout/user_fragment"/>

    <include app:graph="@navigation/authenticated_navigation" />

</navigation>